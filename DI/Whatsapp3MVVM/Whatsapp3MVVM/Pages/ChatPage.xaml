<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Whatsapp3MVVM.MainPage">

    <AbsoluteLayout >
        <HorizontalStackLayout AbsoluteLayout.LayoutBounds="0,0,1,0.1"    BackgroundColor="Aquamarine"
                               AbsoluteLayout.LayoutFlags="All">
            <Image Source="user.png"/>
            <Entry
                VerticalOptions="Center"
                Placeholder="Usuario"
                FontSize="18"
                HorizontalOptions="Center" 
            BackgroundColor="AliceBlue"/>
        </HorizontalStackLayout>

        <ListView AbsoluteLayout.LayoutBounds="0.5,1,1,0.9"     BackgroundColor="CadetBlue"
                    AbsoluteLayout.LayoutFlags="All">
            
        </ListView>

        <HorizontalStackLayout AbsoluteLayout.LayoutBounds="0,1,1,0.1"      BackgroundColor="MediumPurple"    
                               AbsoluteLayout.LayoutFlags="All">
            <Entry
                VerticalTextAlignment="Center"
                Placeholder="Escriba aquí..."
                FontSize="18"
                HorizontalOptions="Center" />
            <ImageButton
                Source="enviar.png" />
        </HorizontalStackLayout>
    </AbsoluteLayout>

</ContentPage>
