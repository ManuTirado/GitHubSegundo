<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CirculitosJuguetones_MAUI.Juego"
            xmlns:local="clr-namespace:CirculitosJuguetones_MAUI">
    <ContentPage.Resources>
        <local:drawableCirculo x:Key="Drawable" />
    </ContentPage.Resources>


    <VerticalStackLayout>
        <Entry x:Name="txtX" Placeholder="Posición X" Keyboard="Numeric"/>
        <Entry x:Name="txtY" Placeholder="Posición Y" Keyboard="Numeric"/>
        <Button Text="Mover" Clicked="OnBtnMoverCirculo"/>
        <AbsoluteLayout x:Name="contenedor">
            
            
        </AbsoluteLayout>
    </VerticalStackLayout>
</ContentPage>
