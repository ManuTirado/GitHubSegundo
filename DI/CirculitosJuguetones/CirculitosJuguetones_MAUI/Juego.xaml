<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CirculitosJuguetones_MAUI.Juego"
            xmlns:local="clr-namespace:CirculitosJuguetones_MAUI">
    <ContentPage.Resources>
        <local:ColorToMauiColorConverter x:Key="ColorToMauiColor" />
    </ContentPage.Resources>

    <VerticalStackLayout x:Name="vsl">
        <CollectionView 
                x:Name="ColeccionCirculos" HorizontalOptions="Center" VerticalOptions="Start"
        ItemsLayout="VerticalGrid, 3" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <BoxView 
                        Color="{Binding ColorCirculo, Converter={StaticResource ColorToMauiColor}}"
                            CornerRadius="{Binding Radio}"
                        HeightRequest="{Binding Radio}"
                        WidthRequest="{Binding Radio}"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button 
        Text="Añadir Círculo"
            Clicked="OnBtnNuevoCirculo"/>
    </VerticalStackLayout>
</ContentPage>
