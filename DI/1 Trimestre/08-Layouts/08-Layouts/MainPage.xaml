<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_08_Layouts.MainPage">

    <VerticalStackLayout
        Margin="30"
        Spacing="20"
        VerticalOptions="Center"
        HorizontalOptions="Center"
        >
        <Button
            x:Name="BotonStackLayout"
            Text="1. Ir a StackLayout"
            Clicked="onBotonStackLayout"
            HorizontalOptions="Start"
        />
        <Button
            x:Name="BotonFlexLayout"
            Text="2. Ir a FlexLayout"
            Clicked="onFlexLayout"
            HorizontalOptions="Start"
           />
        <Button
            x:Name="BotonAbsoluteLayout"
            Text="3. Ir a AbsoluteLayout"
            Clicked="onAbsoluteLayout"
            HorizontalOptions="Start"
        />
        <Button
            x:Name="BotonVariosLayouts"
            Text="4. Ir a VariosLayouts"
            Clicked="onVariosLayouts"
            HorizontalOptions="Start"
        />
        <Button
            x:Name="BotonListadoPersonas"
            Text="5. Ir a ListadoPersonas"
            Clicked="onListadoPersonas"
            HorizontalOptions="Start"
        />
    </VerticalStackLayout>

</ContentPage>
