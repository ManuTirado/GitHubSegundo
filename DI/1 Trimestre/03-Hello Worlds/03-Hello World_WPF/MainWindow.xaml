<Window x:Class="_03_Hello_World_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03_Hello_World_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnSaludar" Content="Saludo" HorizontalAlignment="Left" Margin="340,248,0,0" VerticalAlignment="Top" Click="btnSaludar_Click"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Margin="340,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" TextChanged="txtNombre_TextChanged" AutomationProperties.HelpText="dssd"/>
        <Label x:Name="lbl" Content="Nombre:" HorizontalAlignment="Left" Margin="284,0,0,0" VerticalAlignment="Center"/>

    </Grid>
</Window>
